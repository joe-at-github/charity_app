<div id="package-show-wrapper">
  <div id="package-info">
    <h3>Package information</h3>

    <p>Status: <%= @package.package_status.name %></p>

    <p>Ref. : <%=@package.id %></p>

    <p>Number of items : <%=@package.package_items.count %></p>

  </div>

  <div class="info-and-content">
    <h3>Package content</h3>

    <% @package.package_items.each do |p| %>

    <ul>
      <li><%= p.product.name %> (<%= p.quantity %>)</li>
    </ul>
  <% end %>
  </div>


  <div class="info-and-content"> 
<% if current_user.profile.type == "CharityProfile" %>
    <h3>Contact information</h3>

    <h4><%= @package.business_profile.name %></h4>

    <%= @package.business_profile.street %>
    <%= @package.business_profile.postcode %>
  </br>
    <%= @package.business_profile.contact_first_name %>
    <%= @package.business_profile.contact_last_name %>
  </br>
    <%= @package.business_profile.phone_number %>
<% end %>
  </div>
    

</div>


