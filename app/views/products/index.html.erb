<div class="centered-text" id="package-summary">
  <%= render partial: 'packages/package_summary' %>
 
 <div class="centered-text">
  <% if !current_package.id.nil? %>
    <%= link_to "Review and finalize", edit_package_path(current_package) %>
  <% end %>
 </div>

  <div id="add-product-form">
  </div>
</div>

<h3 class="centered-text">Products needed by charities</h3>
<div class="centered-text">
  <%= link_to "All", products_path  %>
  <%= link_to "Food", products_path(category: "Food"), method: :get  %>
  <%= link_to "Else", products_path(category: "Else"), method: :get  %>
</div>

<div class="product-wrapper">
  <% @products.each do |product| %>


  <div class="product-box centered-text" >
    <%= link_to(image_tag("#{product.name}.jpg", class: "product-links"), package_item_form_products_path(product_id: product.id), remote: true) %>
    <%= product.name %>
  </div>

  <% end %>
</div>
