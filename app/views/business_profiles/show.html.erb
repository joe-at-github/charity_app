<div class="profile-summary">
  <h3>
    <%= @profile.name %>
  </h3>
</div>

<div class="packages">
  <table class="pure-table">
    <thead><th>Package ref.</th><th>Nb. of items</th><th>Status</th><th>Availability</th><th>Content</th></thead>
    <tbody>
      <% @packages.each do |p| %>
        <tr>
          <td> <%= link_to p.id, package_path(package_id:p.id) %> </td>
          <td> <%= p.package_items.count %> </td>
          
          <td><%= p.package_status.name %></td>
          
          <td><%= "#{p.available_from} / #{p.available_until}" %></td>
          <td>
            <% p.package_items.each do |i| %>
                <%= i.product.name %> 
            <% end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>